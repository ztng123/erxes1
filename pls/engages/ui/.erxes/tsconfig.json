{
  "extends": "ts-config-single-spa",
  "files": ["src/erxes-root-config.tsx"],
  "compilerOptions": {
    "baseUrl": "src",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "es2018",
      "esnext.asynciterable"
    ],
    "jsx": "react",
    "declarationDir": "dist",
    "sourceMap": true,
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test*"]
}
